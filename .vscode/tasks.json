{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "cargo test",
      "command": "cargo",
      "args": ["test"],
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated",
        "clear": true
      },
      "options": {
        "env": {
          "RUST_BACKTRACE": "1"
        }
      }
    },
    {
      "type": "shell",
      "label": "cargo doc open",
      "command": "cargo",
      "args": ["doc", "--open", "--no-deps"],
      "problemMatcher": ["$rustc"],
      "presentation": {
        "panel": "dedicated",
        "clear": true
      }
      // "options": {
      //     "env": {
      //         "RUST_BACKTRACE": "1",
      //     }
      // }
    }
  ]
}
