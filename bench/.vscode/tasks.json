{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "options": {
    "env": {
      // "RUST_BACKTRACE": "1",
      // "RUSTFLAGS": "--cfg procmacro2_semver_exempt",
      // "CARGO_TARGET_DIR": "Z:/temporary/target_dirs/${workspaceFolderBasename}/target/",
    },
  },
  "presentation": {
    "panel": "dedicated",
    "clear": true,
  },
  "tasks": [
    {
      // Needed for run (F5)
      "type": "shell",
      "label": "cargo build",
      "command": "cargo",
      "args": [
        "build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$rustc"
      ],
    },
    {
      "type": "shell",
      "label": "cargo bench",
      "command": "cargo",
      "args": [
        "+nightly",
        "bench",
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [
        "$rustc"
      ],
    },
  ],
}