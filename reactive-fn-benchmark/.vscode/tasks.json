{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "cargo bench",
      "command": "cargo",
      "args": ["bench"],
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated",
        "clear": true
      },
      "options": {
        "env": {
          "RUST_BACKTRACE": "1"
        }
      }
    }
  ]
}
